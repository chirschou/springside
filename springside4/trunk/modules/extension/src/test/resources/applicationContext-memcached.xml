<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">

	<!-- XMemcached客户端 -->
	<bean name="xmemcachedClient" class="net.rubyeye.xmemcached.utils.XMemcachedClientFactoryBean" destroy-method="shutdown">
		<property name="servers" value="localhost:11511" />
		<!-- nio 连接池大小 -->
		<property name="connectionPoolSize" value="1" />
	</bean>

	<!-- XMemcached的Wrapper -->
	<bean name="xmemcachedClientWrapper" class="org.springside.modules.memcached.XMemcachedClientWrapper"/>

	<!-- 演示用的Jmemcached, 模拟Memcached服务器 -->
	<bean id="memcachedSimulator" class="org.springside.modules.memcached.MemcachedSimulator" lazy-init="false">
		<property name="serverUrl" value="localhost:11511" />
	</bean>
</beans>