#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<project name="save-wsdl" default="save-wsdl">
	<target name="save-wsdl">
		<property name="wsdlfile" value="../../webapp/wsdl/${artifactId}.wsdl"/>
		<!-- 保存cxf生成的WSDL -->
		<get src="http://localhost:8080/${artifactId}/services/UserService?wsdl" dest="${symbol_dollar}{wsdlfile}"/>
			
		<!-- 替换address路径为生产环境路径,请修改replacevalue的值 -->
		<replace file="${symbol_dollar}{wsdlfile}">
			<replacetoken>
				<![CDATA[<soap:address location="http://localhost:8080/${artifactId}/services/UserService" />]]></replacetoken>
			<replacevalue>
				<![CDATA[<soap:address location="http://localhost:8080/${artifactId}/services/UserService" />]]></replacevalue>
		</replace>
	</target>
</project>
