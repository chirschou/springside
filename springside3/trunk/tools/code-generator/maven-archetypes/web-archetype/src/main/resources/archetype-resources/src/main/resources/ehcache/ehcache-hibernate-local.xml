#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir/hibernate/${artifactId}" />
	
	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />

	<!-- Special objects setting. -->
	<cache name="${package}.entity.security.User" maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />
	<cache name="${package}.entity.security.User.roles" maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />
	<cache name="${package}.entity.security.Role" maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />
	<cache name="${package}.entity.security.Role.auths" maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />
	<cache name="${package}.entity.security.Authority" maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />
</ehcache>
