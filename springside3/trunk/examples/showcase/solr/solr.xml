<?xml version="1.0" encoding="UTF-8" ?>
<!--
 All (relative) paths are relative to the installation path
  
  persistent: Save changes made via the API to this file
  sharedLib: path to a lib directory that will be shared across all cores
  adminPath: RequestHandler path to manage cores.If 'null' (or absent), cores will not be manageable via request handler
-->
<solr persistent="true">
  <cores adminPath="/admin/cores">
    <core name="showcase" instanceDir="forum" config="solr/conf/solrconfig.xml" schema="solr/conf/schema.xml"/>
  </cores>
</solr>
