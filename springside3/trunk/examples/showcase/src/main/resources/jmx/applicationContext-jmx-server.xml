<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<description>JMX服务端配置文件</description>

	<!-- 配置RMI注册服务器 -->
	<bean id="registry" class="org.springframework.remoting.rmi.RmiRegistryFactoryBean" lazy-init="false">
		<property name="port" value="${jmx.rmi.port}" />
	</bean>

	<!-- 配置JMX远程连接 -->
	<bean id="serverConnector" class="org.springframework.jmx.support.ConnectorServerFactoryBean" lazy-init="false">
		<property name="serviceUrl" value="service:jmx:rmi:///jndi/rmi://${server.addr}:${jmx.rmi.port}/showcase" />
		<property name="environment">
			<map>
				<!-- 认证配置,文件路径需为绝对路径 -->
				<!--
					<entry key="jmx.remote.x.password.file" value="/mypath/jmxremote.password" /> <entry
					key="jmx.remote.x.access.file" value="/mypath/jmxremote.access" />
				-->
			</map>
		</property>
	</bean>

	<!-- MBean注册 -->
	<context:mbean-export default-domain="Custom" registration="ignoreExisting" />

	<!-- 系统属性配置MBean -->
	<bean id="serverConfig" class="org.springside.examples.showcase.jmx.server.ServerConfig">
		<property name="nodeName" value="node1" />
		<property name="notificationMailEnabled" value="true" />
	</bean>

	<!-- Hibernate Statistics MBean-->
	<bean id="hibernateStatistics" class="org.hibernate.jmx.StatisticsService">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
</beans>