<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
	default-lazy-init="true">
	<!-- 演示用的SolrJettyRunner模拟Solr -->
	<bean id="SolrSimulator" class="org.springside.modules.solr.SolrSimulator" lazy-init="false" />

	<bean id="solrServerFactory" class="org.springside.modules.solr.MultiCoreSolrServerFactory">
		<property name="serverUrl" value="http://localhost:8080/solr" />
		<property name="coreNamePrefix" value="core" />
		<property name="cores" value="5" />
	</bean>

	<bean id="postSolrDao" class="org.springside.examples.showcase.solr.PostSolrDao" />
</beans>