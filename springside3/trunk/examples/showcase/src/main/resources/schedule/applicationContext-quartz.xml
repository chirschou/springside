<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
	default-lazy-init="true">

	<description>Quartz的定时任务配置</description>

	<!-- Quartz集成工厂 -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean" lazy-init="false">
		<!-- Triggers集成 -->
		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
				<ref bean="simpleTrigger" />
			</list>
		</property>
		<!-- Quartz配置 -->
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.threadCount">5</prop>
			</props>
		</property>
	</bean>

	<!-- Cron式Trigger定义 -->
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="cronJob" />
		<!-- 周一至五,朝九晚五工作时间内每半小时执行一次 -->
		<property name="cronExpression" value="0 0/30 9-17 ? * MON-FRI" />
	</bean>

	<!-- Timer式 Trigger -->
	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="timerJob" />
		<!-- 首次执行延期10秒 -->
		<property name="startDelay" value="10000" />
		<!-- 每次执行间隔1小时 -->
		<property name="repeatInterval" value="3600000" />
	</bean>

	<!-- Cron Job -->
	<bean id="cronJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="exampleJob" />
		<property name="targetMethod" value="executeCronLog" />
		<property name="concurrent" value="true" />
	</bean>

	<!-- Timer Job -->
	<bean id="timerJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="exampleJob" />
		<property name="targetMethod" value="executeTimerLog" />
	</bean>

	<!-- 被执行的业务类 -->
	<bean id="exampleJob" class="org.springside.examples.showcase.schedule.QuartzJob">
		<property name="manager" ref="userManager" />
	</bean>
</beans>
