<?xml version="1.0" encoding="UTF-8"?>
<project name="hibernate tools" default="generate.code" xmlns:artifact="antlib:org.apache.maven.artifact.ant">

	<property name="hibernatetools-templates.path" value="../../../../tools/hibernatetools" />

	<artifact:dependencies pathId="toolslib">
		<pom file="../../pom.xml" />
	</artifact:dependencies>

	<taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="toolslib" />

	<target name="generate.code">
		<hibernatetool destdir="generated" templatepath="${hibernatetools-templates.path}/">
			<classpath>
				<path location="../../target/classes" />
			</classpath>

			<jdbcconfiguration configurationfile="config/hibernate.cfg.xml" revengfile="config/hibernate.reveng.xml" detectmanytomany="true" namingstrategy="org.hibernate.cfg.ImprovedNamingStrategy" reversestrategy="org.springside.modules.orm.hibernate.IgnorePrefixReverseEngineeringStrategy" />

			<hbmtemplate templateprefix="pojo/" template="pojo/Pojo.ftl" filepattern="entity/{package-name}/{class-name}.java">
				<property key="jdk5" value="true" />
				<property key="ejb3" value="true" />
			</hbmtemplate>
			<hbmtemplate templateprefix="pojo/" template="dao.ftl" filepattern="dao/{package-name}/{class-name}Dao.java" />
			<hbmtemplate templateprefix="pojo/" template="manager.ftl" filepattern="manager/{package-name}/{class-name}Manager.java" />
		</hibernatetool>
	</target>

	<target name="convert.mysql2h2" description="convert mysql/oracle to h2 for testing">
		<copy todir="../../src/main/resources/sql/h2" overwrite="true">
			<fileset dir="../../src/main/resources/sql/mysql">
				<include name="**/*.sql" />
			</fileset>
		</copy>

		<replace dir="../../src/main/resources/sql/h2" includes="**/*.sql" token="TYPE=InnoDB" value="" />
		<replace dir="../../src/main/resources/sql/h2" includes="**/*.sql" token="TYPE=MyISAM" value="" />

		<replaceregexp byline="true">
			<regexp pattern="INDEX (.*)" />
			<substitution expression=" " />
			<fileset dir="../../src/main/resources/sql/h2">
				<include name="*.sql" />
			</fileset>
		</replaceregexp>
	</target>
</project>
