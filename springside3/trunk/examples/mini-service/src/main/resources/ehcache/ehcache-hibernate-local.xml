<?xml version="1.0" encoding="UTF-8"?>
<ehcache>

	<diskStore path="java.io.tmpdir/hibernate/mini-service" />

	<!-- DefaultCache setting. -->
	<defaultCache maxElementsInMemory="10000" memoryStoreEvictionPolicy="LRU" eternal="true" diskPersistent="false"
		overflowToDisk="true" maxElementsOnDisk="10000000" />

	<!-- Special objects setting. -->
	<cache name="org.springside.examples.miniservice.entity.user.User"/>
	<cache name="org.springside.examples.miniservice.entity.user.User.roles"/>
	<cache name="org.springside.examples.miniservice.entity.user.Role"/>
</ehcache>
